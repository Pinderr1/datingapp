rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /avatars/{userId}/{fileName} {
      allow read: if request.auth != null; // require signed-in
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /{path=**} {
      allow read, write: if false;
    }
  }
}
